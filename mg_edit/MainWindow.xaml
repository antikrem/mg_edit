<Window x:Class="mg_edit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mg_edit"
        mc:Ignorable="d"
        Title="mg_edit" 
        Height="1080" Width="1920"
        WindowState="Maximized"
        WindowStyle="None">
    <Grid>
        <Canvas x:Name="CenterCanvas" 
            HorizontalAlignment="Left" VerticalAlignment="Top"
            Height="1080" Width="1920">
        </Canvas>
        <Button Content="Spawn New" 
                HorizontalAlignment="Left" VerticalAlignment="Top" 
                Height="50" Width="100" />

        <Grid VerticalAlignment ="Bottom" Height="30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="453*"/>
                <ColumnDefinition Width="25*"/>
            </Grid.ColumnDefinitions>
            <ScrollBar Grid.Column="0" Grid.Row="0"
                VerticalAlignment="Bottom"
                Orientation="Horizontal"
                Height="30" Grid.ColumnSpan="1"/>
            <Button Grid.Column="1" Grid.Row="0"
                Content="Play"/>
        </Grid>
    </Grid>
</Window>
