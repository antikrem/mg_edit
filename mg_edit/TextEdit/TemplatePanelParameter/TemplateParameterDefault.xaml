<UserControl x:Class="mg_edit.TextEdit.TemplatePanelParameter.TemplateParameterDefault"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300"
             Background="Aqua">

    <Grid Margin="0,0,0,0">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="26*"/>
            <ColumnDefinition Width="89*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="200*"/>
        </Grid.RowDefinitions>

        <Label x:Name="FieldName"
               Content="[NAME]" 
               Grid.Row="0" Grid.Column="0"
               HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,2"/>

        <TextBox x:Name="ValueBox"
                 Grid.Row="0" Grid.Column="1"
                 Margin="4,7,0,7" 
                 Text="0" VerticalAlignment="Center" Grid.ColumnSpan="2"/>



    </Grid>
</UserControl>
